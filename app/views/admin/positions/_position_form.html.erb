
<%=form_for [:admin, @position] do |f|%>
<%=radio_group("legend", [f.radio_button(:associate_with_tip, "0", checked: (@position.associate_with_tip.nil? ? false : !@position.associate_with_tip), class: "form-check-input"), f.radio_button(:associate_with_tip, "1", required: true, checked: @position.associate_with_tip, class: "form-check-input")])%>
	<div class="form-group">
		<%=f.label :name%>
		<%=f.text_field :name, class: "form-control"%>
	</div>
	<div class="form-group">
		<%=f.label :starting_wage, "Starting Wage"%>
		<%=f.number_field :starting_wage, step: 0.01, required: true, class: "form-control"%> 
	</div>
	<fieldset class="form-group">
		<legend>Associate with Tips?</legend>
		<div class="form-check">
			<label class="form-check-label">
				<%=f.radio_button :associate_with_tip, "1", required: true, checked: @position.associate_with_tip, class: "form-check-input"%> True 
			</label>
		</div>
		<div class="form-check">
			<label class="form-check-label">
				<%=f.radio_button :associate_with_tip, "0", checked: (@position.associate_with_tip.nil? ? false : !@position.associate_with_tip), class: "form-check-input"%> False
			</label>
	</fieldset>
	<div class="form-group">
		<%=f.label :solo_associated_tip_percentage, "Tip percentage when only other worker"%>
		<%=f.number_field :solo_associated_tip_percentage, value: (@position.multi_associated_tip_percentage.nil? ? nil : @position.solo_associated_tip_percentage * 100), step: 0.01, class: "form-control"%>
	</div>
	<div class="form-group">
		<%=f.label :multi_associated_tip_percentage, "Tip percentage when many other workers"%>
		<%=f.number_field :multi_associated_tip_percentage, value: (@position.multi_associated_tip_percentage.nil? ? nil : @position.multi_associated_tip_percentage * 100), step: 0.01, class: "form-control"%>
	</div>
	<fieldset class="form-group">
		<legend>Location</legend>
		<div class="form-check">
			<label class="form-check-label">
				<%=f.radio_button :location, "Front of House", required: true, class: "form-check-input"%>Front of House
			</label>
		</div>
		<div class="form-check">
			<label class="form-check-label">
				<%=f.radio_button :location, "Back of House", class: "form-check-input"%>Back of House
			</label>
		</div>
	</fieldset>
	<div class="text-center">
		<%=f.submit class: "btn btn-primary"%>
	</div>

<%end%>

