<div class="card" >
  <h3 class="card-header"><%=@employee.name%><%=link_to fa_icon("pencil-square-o", class: "fa-1x btn-icon"), edit_admin_employee_path(@employee)%></h3>
  <div class="card-body">
    <h4 class="card-title">Deets</h4>
    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
    EID: <%=@employee.id%> <br/>
   	Name: <%=@employee.name%> <br/>
    Email: <%=@employee.email%> <br/>
    Position: <%=@employee.position.name%> <br/>
    Manager: <%=@employee.manager ? "Yes" : "No"%> <br/>
    Wage: <%=number_to_currency(@employee.wage)%> <br/>
  </div>
</div>